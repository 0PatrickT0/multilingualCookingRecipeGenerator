{% extends 'base.html.twig' %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/toggleTheme.js') }}"></script>
{% endblock %}

{% block logout %}
	{% if is_granted('ROLE_USER') %}
		<a role="button" class="secondary outline">Welcome
			{{ user.username }}!</a>
		<a href="{{ path('app_search') }}" role="button" class="contrast outline">Recipes</a>
		{% if is_granted('ROLE_ADMIN') %}
			<a href="{{ path('app_admin') }}" role="button" class="contrast outline">Admin</a>
		{% endif %}
		<a href="{{ path('app_logout') }}" role="button">Logout</a>
	{% endif %}
{% endblock %}


{% block login %}
	{% if not user %}
		<a href="{{ path('app_login') }}" role="button">Login</a>
	{% endif %}
{% endblock %}

{% block body %}
	<h1><img src="/images/{{ random_image }}" onclick="toggleTheme()" alt="logo Multilingual Cooking Recipe Generator"/>
		Multilingual Cooking Recipe Generator</h1>

	<h4>
		<p>
			<kbd>Enter your
				<b>ingredients</b>
				and instantly get an automatically generated
				<b>recipe</b>.</p>
		</p>
	</kbd>

</h4>
{{ form_start(form) }}{{ form_row(form.instructions) }}{{ form_row(form.submit, {
		label_html: true,
		label: '<img class="htmx-indicator" src="/wait.svg" alt="wait">&emsp; Get your recipe &emsp;<img class="htmx-indicator" src="/wait.svg" alt="wait">',	}) }}{{ form_end(form) }}<div id="response"></div>{% endblock %}{% block footer %}
<div class="footer">
	<div>Copyright ¬©{{ "now"|date("Y") }}
		- Powered by
		<a href="https://openai.com" target="_blank">OpenAI</a>
		& Developed with ‚ù§Ô∏è by
		<a href="https://moonbase.subscan.io/account/0xa28E71D169FdBe75063eec0A4012b2E654121319" target="_blank">T-Labs üõ∏</a>
		- Icons by
		<a href="https://icons8.com/" target="_blank">icons8</a>.</div>
	<div>
		{% if app.request.cookies.get('theme') == 'light' %}
			<img class="toggleButton" src="/icons8-soleil-48.png" onclick="toggleTheme()" alt="Toggle button" style="cursor: pointer;">
		{% else %}
			<img class="toggleButton" src="/icons8-brouillard-de-nuit-48.png" onclick="toggleTheme()" alt="Toggle button" style="cursor: pointer;">
