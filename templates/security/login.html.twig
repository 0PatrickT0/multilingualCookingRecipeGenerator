{% extends 'base.html.twig' %}

{% block javascripts %}
	{{ parent() }}
	<script src="{{ asset('js/toggleTheme.js') }}"></script>
{% endblock %}

{% block home %}
	<a href="{{ path('app_home') }}" role="button" class="contrast outline">Home</a>
{% endblock %}

{% block body %}
	<h1><img src="/images/{{ random_image }}" onclick="toggleTheme()" alt="logo Multilingual Cooking Recipe Generator"/>
		Multilingual Cooking Recipe Generator</h1>
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

		{# <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1> #}
		<label for="inputUsername">Username</label>
		<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" autocomplete="username" required autofocus>
		<label for="inputPassword">Password</label>
		<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

		<input
		type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		{# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
				        See https://symfony.com/doc/current/security/remember_me.html #}

		<button class="btn btn-lg btn-primary" type="submit">
			Sign in
		</button>

		<div>
			<a href="{{ path('app_registration') }}" class="secondary">Create an account</a>
		</div>


	</form>
{% endblock %}
